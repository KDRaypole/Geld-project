<div class="pt100">
  <div class="text-center border-form-div">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    <h2>Sign up</h2>
    <div class= "container-fluid">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autocomplete: "first_name", autofocus: true, class: "sign_up_text_field"%>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", class: "sign_up_text_field"%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "sign_up_text_field"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "sign_up_text_field"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign_up_text_field"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
