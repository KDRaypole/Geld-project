<div class="pt100">
  <div class="text-center border-form-div">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    <h2>Forgot your password?</h2>
    <br>
    <p>It's ok nobody is perfect.</p>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "margin-bottom: 5px" %>
      </div>

      <div class="actions ">
        <%= f.submit "Reset Password", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
